name: test
on:
  push:
    branches: [main]
  pull_request:

jobs:
  test:
    permissions: write-all
    runs-on: ubuntu-latest
    steps:
      - name: Checkout (GitHub)
        uses: actions/checkout@v3

      - name: Build CI container
        run: |
          docker build -t {{ project_slug }}:latest -f Dockerfile .
      
      - name: Run CI
        run: |
          docker run {{ project_slug }} make validate_ci